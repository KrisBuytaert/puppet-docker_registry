
# Google Cloud Storage Configuration
# See:
# https://developers.google.com/storage/docs/reference/v1/getting-startedv1#keys
# for details on access and secret keys.
<%= scope.function_template(['docker_registry/storage/__header.erb']) %>
    boto_bucket: _env:GCS_BUCKET<% if defined?@boto_bucket then -%>:<%= @boto_bucket %><% end %>
    storage_path: _env:STORAGE_PATH<% if defined?@storage_path then -%>:<%= @storage_path %><% end %>
    gs_secure: _env:GCS_SECURE<% if defined?@gs_secure then -%>:<%= @gs_secure %><% end %>
    gs_access_key: _env:GCS_KEY<% if defined?@gs_access_key then -%>:<%= @gs_access_key %><% end %>
    gs_secret_key: _env:GCS_SECRET<% if defined?@gs_secret_key then -%>:<%= @gs_secret_key %><% end %>
    # OAuth 2.0 authentication with the storage.
    # oauth2 can be set to true or false. If it is set to true, gs_access_key,
    # gs_secret_key and gs_secure are not needed.
    # Client ID and Client Secret must be set into OAUTH2_CLIENT_ID and
    # OAUTH2_CLIENT_SECRET environment variables.
    # See: https://developers.google.com/accounts/docs/OAuth2.
    oauth2: _env:GCS_OAUTH2<% if defined?@oauth2 then -%>:<%= @oauth2 %><% end %>
