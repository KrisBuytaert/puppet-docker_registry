
# This flavor is for storing images in Openstack Swift
<%= scope.function_template(['docker_registry/storage/__header.erb']) %>
    storage_path: _env:STORAGE_PATH<% if defined?@storage_path then -%>:<%= @storage_path %><% end %>
    # keystone authorization
    swift_authurl: _env:OS_AUTH_URL<% if defined?@authurl then -%>:<%= @authurl %><% end %>
    swift_container: _env:OS_CONTAINER<% if defined?@container then -%>:<%= @container %><% end %>
    swift_user: _env:OS_USERNAME<% if defined?@user then -%>:<%= @user %><% end %>
    swift_password: _env:OS_PASSWORD<% if defined?@password then -%>:<%= @password %><% end %>
    swift_tenant_name: _env:OS_TENANT_NAME<% if defined?@tenant_name then -%>:<%= @tenant_name %><% end %>
    swift_region_name: _env:OS_REGION_NAME<% if defined?@region_name then -%>:<%= @region_name %><% end %>
